{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,      
    "importHelpers": true,
    "baseUrl": "../../",
    "outDir": "../../build",  
    "rootDir": "../../",   
    "strict": true,    
    "moduleResolution": "node",                                                    
    "esModuleInterop": true,                
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
  }
}